{
    "name": "Twitter DM Quoted Replies",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Facebook-esque quoted replies for Twitter DMs.",
    "homepage_url": "",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "Twitter DM Quoted Replies",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "https://*/*"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://*/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ],
    "web_accessible_resources": ["js/*.svg"]
  }
  
